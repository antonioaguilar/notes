      machine.vm.provider "virtualbox" do |vm|
        vm.name = "#{hostname}"
        vm.gui = false
        vm.cpus = "#{cpus}"
        vm.memory = "#{memory}"
        vm.customize ["modifyvm", :id, "--cpuexecutioncap", "50"]
        vm.customize ['modifyvm', :id, '--nested-hw-virt', 'on']
        vm.check_guest_additions = false
      end
    end
  end

